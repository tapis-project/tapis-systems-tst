{
  "$id": "http://tapis.tacc.utexas.edu/SystemImportSGCIRequest",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Schema for a request to create a system based on attributes from an SGCI resource",
  "additionalProperties": false,
  "$comment": "TODO: remove comments",
  "$comment": "Use tenant+sgciId by default or tenant+name if optional name is supplied",
  "$comment": "what if sgciId does not conform to Tapis3 name requirements?",
  "$comment": "allow user to override some fields (such as description) at create time?",
  "$comment": "TODO: remove comments",
  "$comment": "TODO: remove comments",
  "$comment": "TODO: remove comments",
  "$comment": "TODO: remove comments",
  "$comment": "TODO: remove comments",

  "type": "object",
  "required": [ "sgciResourceId", "systemType", "host", "defaultAuthnMethod", "canExec" ],
  "properties": {
    "sgciResourceId": { "type": "string", "minLength": 1, "maxLength": 80 },
    "id": { "$ref": "resource:///edu/utexas/tacc/tapis/systems/api/jsonschema/Definitions.json#/SystemId" },
    "description": { "type": "string", "maxLength": 2048 },
    "owner": { "$ref": "resource:///edu/utexas/tacc/tapis/systems/api/jsonschema/Definitions.json#/UserName" },
    "enabled": { "type": "boolean", "default": true },
    "effectiveUserId": { "$ref": "resource:///edu/utexas/tacc/tapis/systems/api/jsonschema/Definitions.json#/UserName" },
    "authnCredential": {"$ref": "resource:///edu/utexas/tacc/tapis/systems/api/jsonschema/Definitions.json#/Credential" },
    "jobCapabilities": {
      "type": "array",
      "items": {"$ref": "resource:///edu/utexas/tacc/tapis/systems/api/jsonschema/Definitions.json#/Capability" }
    },
    "tags": {
      "type": "array",
      "items": { "type":  "string", "minLength": 1, "maxLength": 128 }
    },
    "notes": { "type": "object" }
  }
}
