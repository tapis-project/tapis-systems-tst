{
  "$id": "http://tapis.tacc.utexas.edu/SystemSearchRequest",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Schema for a request to search for systems",
  "additionalProperties": false,

  "type": "object",
  "required": [ "match" ],
  "properties": {
    "match": {
      "type": "array",
      "minItems": 1,
      "items": {"type": "string"}
    }
  }
}
